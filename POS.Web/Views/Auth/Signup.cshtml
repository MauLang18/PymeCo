@model POS.Web.ViewModels.SignupViewModel
@{
    Layout = null;
    ViewData["Title"] = "Registrarse - POS";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registrarse | Pyme Co.</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest"></script>
</head>

<body class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 flex items-center justify-center font-sans">
    <div class="bg-white shadow-2xl rounded-2xl p-10 w-full max-w-md border border-gray-200">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-800">
                Crear cuenta en <span class="text-blue-600">Pyme Co.</span>
            </h1>
            <p class="text-gray-500 text-sm mt-2">Regístrate para acceder al sistema POS</p>
        </div>

        <form asp-action="Signup" method="post" class="space-y-6">
            <div asp-validation-summary="All" class="text-red-600 text-sm mb-3"></div>

            <div>
                <label asp-for="FullName" class="block text-gray-700 font-medium mb-1"></label>
                <div class="relative">
                    <i data-lucide="user" class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 w-4 h-4"></i>
                    <input asp-for="FullName" placeholder="Juan Pérez"
                           class="w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition" />
                </div>
                <span asp-validation-for="FullName" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Email" class="block text-gray-700 font-medium mb-1"></label>
                <div class="relative">
                    <i data-lucide="mail" class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 w-4 h-4"></i>
                    <input asp-for="Email" placeholder="correo@ejemplo.com"
                           class="w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition" />
                </div>
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-gray-700 font-medium mb-1"></label>
                <div class="relative">
                    <i data-lucide="lock" class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 w-4 h-4"></i>
                    <input asp-for="Password" type="password" placeholder="••••••••"
                           class="w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition" />
                </div>
                <small class="text-gray-500 text-xs block mt-1">
                    Mínimo 6 caracteres, incluye mayúsculas, minúsculas y números.
                </small>
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="ConfirmPassword" class="block text-gray-700 font-medium mb-1"></label>
                <div class="relative">
                    <i data-lucide="check-circle" class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 w-4 h-4"></i>
                    <input asp-for="ConfirmPassword" type="password" placeholder="••••••••"
                           class="w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
            </div>

            <button type="submit"
                    class="w-full bg-blue-600 text-white py-3 rounded-xl font-semibold flex items-center justify-center gap-2 text-lg hover:bg-blue-800 transition-all transform hover:scale-[1.03] shadow-md">
                <i data-lucide="user-plus" class="w-5 h-5"></i>
                Crear Cuenta
            </button>
        </form>

        <p class="text-center text-sm text-gray-600 mt-6">
            ¿Ya tienes una cuenta?
            <a href="@Url.Action("Login", "Auth")" class="text-blue-600 font-medium hover:underline">Inicia sesión aquí</a>
        </p>

       @*  <div class="mt-6 bg-yellow-50 border border-yellow-200 text-yellow-700 text-sm p-3 rounded-lg">
            <i data-lucide="info" class="inline-block w-4 h-4 mr-1"></i>
            <strong>Nota:</strong> las nuevas cuentas se crean con el rol <strong>Cajero</strong> por defecto. Contacta al administrador para cambiar tu rol.
        </div> *@
    </div>

    <script>
        lucide.createIcons();
    </script>
</body>
</html>
