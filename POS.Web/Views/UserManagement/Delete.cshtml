@model POS.Web.ViewModels.UserManagementViewModel

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="w-full px-6 py-8">
    <div class="max-w-2xl mx-auto">
        <div class="flex items-center mb-6">
            <a href="@Url.Action("Index", "UserManagement")"
               class="text-[color:var(--primary)] hover:text-[color:var(--primary-dark)] mr-4">
                <i data-lucide="arrow-left" class="w-6 h-6"></i>
            </a>
            <h1 class="text-2xl font-bold text-[color:var(--txt-primary)]">@ViewData["Title"]</h1>
        </div>

        <div class="bg-white rounded-2xl shadow-sm border border-[color:var(--border)] p-6">
            <!-- Warning -->
            <div class="mb-6 p-4 rounded-lg bg-red-50 border border-red-200 flex items-start gap-3">
                <i data-lucide="alert-triangle" class="w-6 h-6 text-red-600 flex-shrink-0 mt-0.5"></i>
                <div>
                    <h3 class="font-semibold text-red-800 mb-1">¿Estás seguro que deseas eliminar este usuario?</h3>
                    <p class="text-sm text-red-700">Esta acción no se puede deshacer. Todos los datos asociados a este usuario se perderán permanentemente.</p>
                </div>
            </div>

            <!-- User Info -->
            <dl class="space-y-4">
                <div class="flex border-b border-gray-200 pb-3">
                    <dt class="w-1/3 text-sm font-medium text-gray-500">Nombre:</dt>
                    <dd class="w-2/3 text-sm text-gray-900 font-semibold">@Model.FullName</dd>
                </div>
                <div class="flex border-b border-gray-200 pb-3">
                    <dt class="w-1/3 text-sm font-medium text-gray-500">Email:</dt>
                    <dd class="w-2/3 text-sm text-gray-900">@Model.Email</dd>
                </div>
                <div class="flex border-b border-gray-200 pb-3">
                    <dt class="w-1/3 text-sm font-medium text-gray-500">Rol:</dt>
                    <dd class="w-2/3">
                        <span class="px-3 py-1 rounded-full text-xs font-medium
                            @(Model.Role == "Admin" ? "bg-red-100 text-red-700" :
                                                            Model.Role == "Vendedor" ? "bg-blue-100 text-blue-700" :
                                                            "bg-gray-100 text-gray-700")">
                            @Model.Role
                        </span>
                    </dd>
                </div>
                <div class="flex border-b border-gray-200 pb-3">
                    <dt class="w-1/3 text-sm font-medium text-gray-500">Estado:</dt>
                    <dd class="w-2/3">
                        @if (Model.IsActive)
                        {
                            <span class="px-3 py-1 rounded-full text-xs font-medium bg-emerald-100 text-emerald-700">
                                Activo
                            </span>
                        }
                        else
                        {
                            <span class="px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-700">
                                Inactivo
                            </span>
                        }
                    </dd>
                </div>
            </dl>

            <!-- Actions -->
            <div class="flex gap-3 mt-6">
                <form asp-action="Delete" method="post" class="inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit"
                            class="px-6 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors flex items-center gap-2">
                        <i data-lucide="trash-2" class="w-4 h-4"></i>
                        Sí, Eliminar Usuario
                    </button>
                </form>
                <a href="@Url.Action("Index", "UserManagement")"
                   class="px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors">
                    Cancelar
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        if (window.lucide?.createIcons) window.lucide.createIcons();
    </script>
}
