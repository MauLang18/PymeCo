@model POS.Web.ViewModels.EditUserViewModel

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="w-full px-6 py-8">
    <div class="max-w-2xl mx-auto">
        <div class="flex items-center mb-6">
            <a href="@Url.Action("Index", "UserManagement")"
               class="text-[color:var(--primary)] hover:text-[color:var(--primary-dark)] mr-4">
                <i data-lucide="arrow-left" class="w-6 h-6"></i>
            </a>
            <h1 class="text-2xl font-bold text-[color:var(--txt-primary)]">@ViewData["Title"]</h1>
        </div>

        <div class="bg-white rounded-2xl shadow-sm border border-[color:var(--border)] p-6">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CurrentRole" />

                <div asp-validation-summary="ModelOnly" class="mb-4 p-4 rounded-lg bg-red-100 text-red-700 border border-red-300"></div>

                <div class="space-y-4">
                    <!-- Nombre Completo -->
                    <div>
                        <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="FullName"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                        <span asp-validation-for="FullName" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Email -->
                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Email" type="email"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                        <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Rol -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Rol Actual</label>
                        <input type="text" value="@Model.CurrentRole" disabled
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-100" />
                    </div>

                    <div>
                        <label asp-for="NewRole" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <select asp-for="NewRole" asp-items="@ViewBag.Roles"
                                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="">-- Seleccione un rol --</option>
                        </select>
                        <span asp-validation-for="NewRole" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Usuario Activo -->
                    <div class="flex items-center">
                        <input asp-for="IsActive" type="checkbox"
                               class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                        <label asp-for="IsActive" class="ml-2 text-sm font-medium text-gray-700"></label>
                    </div>

                    <hr class="my-6" />

                    <h3 class="text-lg font-semibold text-gray-800 mb-4">Cambiar Contraseña (Opcional)</h3>

                    <!-- Nueva Contraseña -->
                    <div>
                        <label asp-for="NewPassword" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="NewPassword" type="password"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                        <span asp-validation-for="NewPassword" class="text-red-600 text-sm"></span>
                        <p class="text-xs text-gray-500 mt-1">Dejar en blanco si no desea cambiar la contraseña</p>
                    </div>

                    <!-- Confirmar Nueva Contraseña -->
                    <div>
                        <label asp-for="ConfirmNewPassword" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="ConfirmNewPassword" type="password"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                        <span asp-validation-for="ConfirmNewPassword" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <!-- Botones -->
                <div class="flex gap-3 mt-6">
                    <button type="submit"
                            class="px-6 py-2 bg-[color:var(--primary)] text-white rounded-lg hover:bg-[color:var(--primary-dark)] transition-colors">
                        <i data-lucide="save" class="inline w-4 h-4 mr-1"></i>
                        Guardar Cambios
                    </button>
                    <a href="@Url.Action("Index", "UserManagement")"
                       class="px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors">
                        Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        if (window.lucide?.createIcons) window.lucide.createIcons();
    </script>
}
