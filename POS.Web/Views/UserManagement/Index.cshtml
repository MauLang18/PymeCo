@model IEnumerable<POS.Web.ViewModels.UserManagementViewModel>

@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="w-full px-6 py-8">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
        <h1 class="text-2xl font-bold text-[color:var(--txt-primary)]">@ViewData["Title"]</h1>

        <div class="flex items-center gap-3 mt-4 sm:mt-0">
            <a href="@Url.Action("Create", "UserManagement")"
               class="px-4 py-2 rounded-xl text-white font-medium bg-[color:var(--primary)] hover:bg-[color:var(--primary-dark)] transition-colors">
                <i data-lucide="user-plus" class="inline w-4 h-4 mr-1"></i> Nuevo Usuario
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mb-4 p-4 rounded-lg bg-green-100 text-green-700 border border-green-300">
            <i data-lucide="check-circle" class="inline w-5 h-5 mr-2"></i>
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="mb-4 p-4 rounded-lg bg-red-100 text-red-700 border border-red-300">
            <i data-lucide="x-circle" class="inline w-5 h-5 mr-2"></i>
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="w-full overflow-x-auto shadow-sm rounded-2xl border border-[color:var(--border)] bg-[color:var(--light-panel)]">
        <table class="min-w-full text-sm text-left text-[color:var(--txt-secondary)]">
            <thead class="bg-[color:var(--light-bg)] text-[color:var(--txt-primary)] text-xs uppercase">
                <tr>
                    <th class="px-6 py-3 font-semibold">Nombre</th>
                    <th class="px-6 py-3 font-semibold">Email</th>
                    <th class="px-6 py-3 font-semibold">Rol</th>
                    <th class="px-6 py-3 font-semibold">Estado</th>
                    <th class="px-6 py-3 font-semibold">Email Confirmado</th>
                    <th class="px-6 py-3 text-center font-semibold">Acciones</th>
                </tr>
            </thead>

            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var user in Model)
                    {
                        <tr class="border-t border-[color:var(--border)] hover:bg-[color:var(--light-bg)] transition-colors">
                            <td class="px-6 py-4">@user.FullName</td>
                            <td class="px-6 py-4">@user.Email</td>
                            <td class="px-6 py-4">
                                <span class="px-3 py-1 rounded-full text-xs font-medium
                                        @(user.Role == "Admin" ? "bg-red-100 text-red-700" :
                                                                        user.Role == "Vendedor" ? "bg-blue-100 text-blue-700" :
                                                                        "bg-gray-100 text-gray-700")">
                            @user.Role
                        </span>
                    </td>
                    <td class="px-6 py-4">
                        @if (user.IsActive)
                                {
                                    <span class="px-3 py-1 rounded-full text-xs font-medium bg-emerald-100 text-emerald-700">
                                        Activo
                                    </span>
                                }
                                else
                                {
                                    <span class="px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-700">
                                        Inactivo
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4 text-center">
                                @if (user.EmailConfirmed)
                                {
                                    <i data-lucide="check-circle" class="w-5 h-5 text-green-600 inline"></i>
                                }
                                else
                                {
                                    <i data-lucide="x-circle" class="w-5 h-5 text-red-600 inline"></i>
                                }
                            </td>
                            <td class="px-6 py-4 text-center">
                                <div class="flex items-center justify-center gap-4">
                                    <a href="@Url.Action("Edit", "UserManagement", new { id = user.Id })"
                                       class="text-[color:var(--primary)] hover:text-[color:var(--primary-dark)] transition-colors"
                                       title="Editar">
                                        <i data-lucide="pencil-line" class="w-5 h-5"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "UserManagement", new { id = user.Id })"
                                       class="text-[color:var(--error)] hover:text-red-700 transition-colors"
                                       title="Eliminar">
                                        <i data-lucide="trash-2" class="w-5 h-5"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="px-6 py-6 text-center text-gray-400">
                            No hay usuarios registrados.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        if (window.lucide?.createIcons) window.lucide.createIcons();
    </script>
}
