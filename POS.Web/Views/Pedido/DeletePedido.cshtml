@model POS.Application.DTOs.PedidoDto
@{
    ViewData["Title"] = $"Eliminar Pedido #{Model.Id}";
}

<div class="max-w-3xl mx-auto space-y-6">
    <div class="rounded-xl border border-red-200 bg-red-50 p-4">
        <div class="flex items-center justify-between">
            <div>
                <h2 class="text-red-700 font-semibold">¿Eliminar pedido #@Model.Id?</h2>
                <p class="text-sm text-red-700/80">Esta acción no se puede deshacer.</p>
            </div>
            <a asp-action="Index" class="inline-flex items-center gap-2 rounded-lg px-3 py-2 text-red-700 hover:bg-red-100">Cancelar</a>
        </div>
    </div>

    <div class="rounded-xl border border-gray-200 bg-white p-4">
        <dl class="grid grid-cols-3 gap-y-2 text-sm">
            <dt class="text-gray-500">Cliente</dt>
            <dd class="col-span-2">@Model.ClienteNombre</dd>
            <dt class="text-gray-500">Usuario</dt>
            <dd class="col-span-2">@Model.UsuarioNombre</dd>
            <dt class="text-gray-500">Fecha</dt>
            <dd class="col-span-2">@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</dd>
            <dt class="text-gray-500">Total</dt>
            <dd class="col-span-2 font-bold">@Model.Total.ToString("N2")</dd>
            <dt class="text-gray-500">Estado</dt>
            <dd class="col-span-2">@Model.EstadoPedido</dd>
        </dl>
    </div>

    <form asp-action="DeleteConfirmed" method="post" class="flex justify-end gap-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="inline-flex items-center gap-2 rounded-lg bg-red-600 px-4 py-2 text-white hover:bg-red-700">
            <i data-lucide="trash-2" class="w-4 h-4"></i> Eliminar
        </button>
        <a asp-action="Index" class="inline-flex items-center gap-2 rounded-lg border border-gray-300 px-4 py-2 text-gray-700 hover:bg-gray-50">
            Cancelar
        </a>
    </form>
</div>
