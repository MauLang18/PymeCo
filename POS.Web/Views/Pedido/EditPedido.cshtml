@model POS.Application.DTOs.PedidoDto
@{
    ViewData["Title"] = "Editar Pedido";
    var pedidoId = (int)(ViewBag.PedidoId ?? 0);
}

<h2 class="mb-3">Editar Pedido #@pedidoId</h2>

<div class="card mb-4">
    <div class="card-header">Encabezado</div>
    <div class="card-body">
        <form asp-action="EditPedido" asp-route-id="@pedidoId" method="post" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-md-6">
                <label asp-for="ClienteId" class="form-label"></label>
                <input asp-for="ClienteId" class="form-control" />
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="UsuarioId" class="form-label"></label>
                <input asp-for="UsuarioId" class="form-control" />
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Fecha" class="form-label"></label>
                <input asp-for="Fecha" class="form-control" type="datetime-local" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label class="form-label">Estado</label>
                <select asp-for="EstadoPedido" class="form-select">
                    <option>Pendiente</option>
                    <option>Pagado</option>
                    <option>Enviado</option>
                    <option>Cancelado</option>
                </select>
                <span asp-validation-for="EstadoPedido" class="text-danger"></span>
            </div>

            <div class="col-12">
                <button class="btn btn-primary" type="submit">Guardar encabezado</button>
                <a asp-action="DetailsPedido" asp-route-id="@pedidoId" class="btn btn-outline-info">Ver</a>
                <a asp-action="ListPedido" class="btn btn-outline-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Detalles</span>
        <form asp-action="Recalcular" method="post" class="m-0">
            <input type="hidden" name="pedidoId" value="@pedidoId" />
            <button class="btn btn-sm btn-outline-secondary" type="submit">Recalcular Totales</button>
        </form>
    </div>
    <div class="card-body">

        @{
            var detalles = ViewData["Detalles"] as IEnumerable<POS.Domain.Entities.PedidoDetalle> ?? Enumerable.Empty<POS.Domain.Entities.PedidoDetalle>();
        }
        @await Html.PartialAsync("_TablaDetalles", detalles)

        <hr />

        <h5 class="mb-3">Agregar detalle</h5>
        <form asp-action="AddDetalle" method="post" class="row g-2">
            <input type="hidden" name="pedidoId" value="@pedidoId" />

            <div class="col-md-2">
                <label class="form-label">ProductoId</label>
                <input name="ProductoId" class="form-control" type="number" min="1" required />
            </div>
            <div class="col-md-2">
                <label class="form-label">Cantidad</label>
                <input name="Cantidad" class="form-control" type="number" min="1" value="1" required />
            </div>
            <div class="col-md-2">
                <label class="form-label">PrecioUnitario</label>
                <input name="PrecioUnitario" class="form-control" type="number" step="0.01" min="0" value="0" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Descuento %</label>
                <input name="DescuentoPorc" class="form-control" type="number" step="0.01" min="0" max="100" value="0" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Impuesto %</label>
                <input name="ImpuestoPorc" class="form-control" type="number" step="0.01" min="0" max="100" value="13" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Total Línea</label>
                <input name="TotalLinea" class="form-control" type="number" step="0.01" min="0" value="0" />
                <div class="form-text">Déjalo en 0 para que se calcule.</div>
            </div>

            <div class="col-12 mt-2">
                <button class="btn btn-success" type="submit">Agregar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
