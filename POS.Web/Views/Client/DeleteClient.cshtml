@* Views/Client/DeleteClient.cshtml *@
@model POS.Domain.Entities.Client
@{
    ViewBag.Title = "Eliminar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto mt-6">
    <div class="rounded-2xl shadow p-6 bg-white">
        <div class="flex items-center gap-3 mb-4">
            <i data-lucide="trash-2" class="text-red-600"></i>
            <h1 class="text-2xl font-semibold text-[color:var(--txt-primary)]">Eliminar Cliente</h1>
        </div>

        <div class="p-4 rounded-lg border border-red-200 bg-red-50 text-red-800 mb-4">
            <p><strong>Advertencia:</strong> Esta acción eliminará al cliente de forma permanente.</p>
        </div>

        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6 text-[color:var(--txt-primary)]">
            <div>
                <dt class="text-sm text-gray-500">Nombre</dt>
                <dd class="text-base font-medium">@Model.Name</dd>
            </div>
            <div>
                <dt class="text-sm text-gray-500">Cédula</dt>
                <dd class="text-base font-medium">@(!string.IsNullOrWhiteSpace(Model.NationalId) ? Model.NationalId : "—")</dd>
            </div>
            <div>
                <dt class="text-sm text-gray-500">Correo</dt>
                <dd class="text-base font-medium">@(!string.IsNullOrWhiteSpace(Model.Email) ? Model.Email : "—")</dd>
            </div>
            <div>
                <dt class="text-sm text-gray-500">Teléfono</dt>
                <dd class="text-base font-medium">@(!string.IsNullOrWhiteSpace(Model.Phone) ? Model.Phone : "—")</dd>
            </div>
            <div class="md:col-span-2">
                <dt class="text-sm text-gray-500">Dirección</dt>
                <dd class="text-base font-medium">@(!string.IsNullOrWhiteSpace(Model.Address) ? Model.Address : "No registrada")</dd>
            </div>
            <div>
                <dt class="text-sm text-gray-500">Fecha de Registro</dt>
                <dd class="text-base font-medium">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
            </div>
            <div>
                <dt class="text-sm text-gray-500">Última Modificación</dt>
                <dd class="text-base font-medium">@((Model.UpdatedAt.HasValue ? Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "No modificada"))</dd>
            </div>
        </dl>

        <form asp-action="DeleteClient" asp-controller="Client" asp-route-id="@Model.Id" method="post" class="flex items-center gap-3">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />

            <a asp-controller="Client" asp-action="ListClient"
               class="px-4 py-2 rounded-xl border border-gray-300 hover:bg-gray-50">
                Cancelar
            </a>

            <button type="submit" class="px-4 py-2 rounded-xl bg-red-600 text-white hover:bg-red-700">
                Eliminar definitivamente
            </button>
        </form>
    </div>
</div>
