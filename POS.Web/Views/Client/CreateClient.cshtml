@* Views/Client/CreateClient.cshtml *@
@model POS.Application.DTOs.ClientDto
@{
    ViewBag.Title = "Nuevo Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-2xl mx-auto bg-[color:var(--light-panel)] border border-[color:var(--border)] rounded-2xl shadow-sm p-8 mt-10">
    <h1 class="text-2xl font-bold text-[color:var(--txt-primary)] mb-6 flex items-center gap-2">
        <i data-lucide="user-plus" class="w-6 h-6 text-[color:var(--primary)]"></i>
        Nuevo Cliente
    </h1>

    <form asp-action="CreateClient" asp-controller="Client" method="post" class="space-y-6">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-[color:var(--error)] text-sm"></div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div>
                <label asp-for="Name" class="block text-sm font-medium text-[color:var(--txt-secondary)] mb-2"></label>
                <input asp-for="Name"
                       class="w-full border border-[color:var(--border)] rounded-xl px-4 py-2.5 focus:ring-2 focus:ring-[color:var(--primary)]"
                       maxlength="200" placeholder="Nombre completo del cliente" />
                <span asp-validation-for="Name" class="text-[color:var(--error)] text-sm"></span>
            </div>

            <div>
                <label asp-for="NationalId" class="block text-sm font-medium text-[color:var(--txt-secondary)] mb-2"></label>
                <input asp-for="NationalId"
                       class="w-full border border-[color:var(--border)] rounded-xl px-4 py-2.5 focus:ring-2 focus:ring-[color:var(--primary)]"
                       maxlength="40" placeholder="Cédula" />
                <span asp-validation-for="NationalId" class="text-[color:var(--error)] text-sm"></span>
            </div>

            <div>
                <label asp-for="Email" class="block text-sm font-medium text-[color:var(--txt-secondary)] mb-2"></label>
                <input asp-for="Email" type="email"
                       class="w-full border border-[color:var(--border)] rounded-xl px-4 py-2.5 focus:ring-2 focus:ring-[color:var(--primary)]"
                       maxlength="200" placeholder="correo@ejemplo.com" />
                <span asp-validation-for="Email" class="text-[color:var(--error)] text-sm"></span>
            </div>

            <div>
                <label asp-for="Phone" class="block text-sm font-medium text-[color:var(--txt-secondary)] mb-2"></label>
                <input asp-for="Phone"
                       class="w-full border border-[color:var(--border)] rounded-xl px-4 py-2.5 focus:ring-2 focus:ring-[color:var(--primary)]"
                       maxlength="50" placeholder="Número de teléfono" />
                <span asp-validation-for="Phone" class="text-[color:var(--error)] text-sm"></span>
            </div>

            <div class="sm:col-span-2">
                <label asp-for="Address" class="block text-sm font-medium text-[color:var(--txt-secondary)] mb-2"></label>
                <textarea asp-for="Address" rows="3"
                          class="w-full border border-[color:var(--border)] rounded-xl px-4 py-2.5 focus:ring-2 focus:ring-[color:var(--primary)]"
                          maxlength="500" placeholder="Dirección del cliente"></textarea>
                <span asp-validation-for="Address" class="text-[color:var(--error)] text-sm"></span>
            </div>
        </div>

        <div class="mt-8 flex justify-end gap-4">
            <a asp-controller="Client" asp-action="ListClient"
               class="px-5 py-2.5 border border-[color:var(--border)] text-[color:var(--txt-secondary)] rounded-xl hover:bg-[color:var(--light-bg)] transition-colors">
                Cancelar
            </a>
            <button type="submit"
                    class="px-5 py-2.5 bg-[color:var(--primary)] text-white font-medium rounded-xl hover:bg-[color:var(--primary-dark)] transition-colors flex items-center gap-2">
                <i data-lucide="save" class="w-5 h-5"></i> Guardar
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
