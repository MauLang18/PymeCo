@{
    ViewData["Title"] = "Not Found";
}
<section class="flex flex-col items-center justify-center text-center gap-6 py-24">
  <div class="flex items-center justify-center w-20 h-20 rounded-2xl bg-primary/10 text-primary">
    <svg class="w-10 h-10" viewBox="0 0 24 24" fill="currentColor"><path d="M11 7h2v6h-2V7zm0 8h2v2h-2v-2zm1-13C6.48 2 2 6.48 2 12s4.48 10 10 10
    10-4.48 10-10S17.52 2 12 2z"/></svg>
  </div>
  <div>
    <h1 class="text-3xl font-bold tracking-tight">Page not found</h1>
    <p class="mt-2 text-txt-secondary max-w-md">
      The page you’re looking for doesn’t exist or was moved.
    </p>
  </div>
  <div class="flex items-center gap-3">
    <a asp-controller="Home" asp-action="Index"
       class="px-4 py-2 rounded-xl bg-[color:var(--primary)] text-white hover:bg-[color:var(--primary-dark)] shadow-soft">Go Home</a>
    <a asp-controller="Products" asp-action="ListProduct"
       class="px-4 py-2 rounded-xl border border-border text-txt-primary hover:bg-light-bg">Products</a>
  </div>
</section>
